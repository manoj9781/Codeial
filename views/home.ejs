<h1>Codeial | <%= title%></h1>

<section id="feed-post">
  <% if(locals.user) { %>
  <h3>Post</h3>
  <form action="/posts/create" id="new-post-from" method="post">
    <textarea
      name="content"
      cols="30"
      rows="3"
      placeholder="Type Here..."
      required
    ></textarea>
    <input type="submit" value="Post" />
  </form>
  <% } %>

  <div id="post-list-container">
    <ul>
      <% for(post of posts) {%>

      <%- include('_post') -%>

      <% } %>
    </ul>
  </div>
</section>

<section id="users-friends">
  <h4>Friends</h4>
  <% for(u of all_users){ %>
    <p>
      <a href="/users/profile/<%= u.id %>"> <%= u.name%> </a>
    </p>
      
<%  } %>
</section>
